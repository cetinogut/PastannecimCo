@model IList<PastannecimCo.Models.ViewModels.CakeOrderViewModel>
@{
    ViewData["Title"] = "Admin";
}

<h1>Customer Orders</h1>

<table class="table table-striped table-hover table-dark">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Customer Name</th>
            <th>Number</th>
            <th>Email</th>
            <th>User Id</th>
            <th>Order Date</th>
            <th>Compledet Date</th>
            <th>Order status</th>
            <th>Update</th>
        </tr>
    </thead>


    <tbody>

        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserName</td>
                <td>@order.PhoneNumber</td>
                <td>@order.Email</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate</td>
                <td>@order.CompletedDate</td>
                <td>@order.OrderStatus</td>
                <td>
                    <a class="btn btn-sm btn-success" asp-controller="Admin" asp-action="Update" asp-route-id="@order.Id">Update</a>
                </td>
            </tr>
        }





    </tbody>
   
</table>